@{
  Layout = "_Layout";
}

<h1>Add a new Order to @Model.Name</h1>

<p>Enter a title, description, price, and date for the new order below:</p>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderTitle">Order Title</label>
  <input id="orderTitle" name="orderTitle" type="text" class="form-control">
  <br>
  <label for="orderDescription">Order Description</label>
  <textarea id="orderDescription" name="orderDescription" type="text" class="form-control"></textarea>
  <br>
  <label for="orderPrice">Order Price</label>
  <input id="orderPrice" name="orderPrice" type="number" class="form-control">
  <br>
  <label for="orderDate">Order Date</label>
  <input id="orderDate" name="orderDate" type="text" class="form-control">
  <button type="submit" class="btn btn-outline-primary">Add Order</button>
</form>