@{
  Layout = "_Layout";
}

<h1>@Model["Order"].Title</h1>
<div class="orderPage">
  <h3>Description:</h3>
  <p>@Model["Order"].Description</p>
  <h3>Price:</h3>
  <p>$@Model["Order"].Price.00</p>
  <h3>Date:</h3>
  <p>@Model["Order"].Date</p>
</div>

<br>
<form action='/vendors/@Model["Vendor"].Id/orders/delete' method="post">
  <input id="vendorId" name="vendorId" type="hidden" value='@Model["Vendor"].Id'>
  <input id="orderId" name="orderId" type="hidden" value='@Model["Order"].Id'>
  <button type="submit" name="button" class="btn btn-outline-danger">Delete this order</button>
</form>
<br>
<a href='/vendors/@Model["Vendor"].Id'><button class="btn btn-outline-secondary">Return to Order list</button></a>
