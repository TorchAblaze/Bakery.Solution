@using Bakery.Models;

@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <br>
  <h3>No vendors have been added yet!</h3>
}
else
{
  <ol>
  @foreach (Vendor vendor in Model)
  {
    <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
  }
  </ol>
}
<br>
<a href="/vendors/new"><button class="btn btn-outline-secondary">Add a new vendor</button></a>