@using Bakery.Models

@{
  Layout = "_Layout";
}

<h1>Orders for @Model["Vendor"].Name</h1>
<br>

@if (@Model["Orders"].Count == 0)
{
  <br>
  <h3>No orders for this vendor have been added yet!</h3>
}
else
{
  <h3>Vendor Description: @Model["Vendor"].Description</h3>

  <ol>
  @foreach (Order order in @Model["Orders"])
  {
    <li><a href='/vendors/@Model["Vendor"].Id/orders/@order.Id'>@order.Title</a></li>
  }
  </ol>
}

<br>
<br>
<a href='/vendors/@Model["Vendor"].Id/orders/new'><button class="btn btn-outline-secondary">Add a new order</button></a>
<br>
<br>
<a href="/vendors"><button class="btn btn-outline-secondary">Return to vendor list</button></a>