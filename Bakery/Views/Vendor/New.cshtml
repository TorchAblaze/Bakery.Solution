@{
  Layout = "_Layout";
}

<h1>Add a new Vendor</h1>
<p>Enter a name and description for the new vendor below:</p>
<form action="/vendors" method="post">
  <label for="vendorName">Vendor name</label>
  <input id="vendorName" name="vendorName" type="text" class="form-control">
  <br>
  <label for="vendorDescription">Vendor description</label>
  <textarea id="vendorDescription" name="vendorDescription" type="text-passage" class="form-control"></textarea>
  <br>
  <button type="submit" class="btn btn-outline-primary">Add Vendor</button>
</form>
<br>
<br>
<a href="/vendors"><button class="btn btn-outline-secondary">Back to vendor list</button></a>